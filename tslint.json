{
  "extends": "@oclif/tslint",
  "rules": {
    "trailing-comma": [true, { "multiline": "always", "singleline": "never" }],
    "no-unused": [
      true,
      {
        "ignore-pattern": "^_"
      }
    ],
    "ter-indent": [
      true,
      2,
      {
        "SwitchCase": 1
      }
    ],
    "ordered-imports": [
      true,
      {
        "module-source-path": "any"
      }
    ],
    "object-curly-spacing": [true, "always"]
  }
}
